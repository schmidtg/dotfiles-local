[alias]
  l = log --pretty=colored
  br = branch -v
  hist = log --graph --pretty=oneline --abbrev-commit
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = vimdiff -f $LOCAL $MERGED $REMOTE
[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
[core]
  editor = vim
